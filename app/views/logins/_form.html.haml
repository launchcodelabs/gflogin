= form_for @login do |f|
  .control-group
    = f.label :firstName, :class => 'control-label'
    .controls
      = f.text_field :firstName, :class => 'text_field'
    .control-group
    = f.label :lastName, :class => 'control-label'
    .controls
      = f.text_field :lastName, :class => 'text_field'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'
  .control-group
    = f.label :'company (optional)', :class => 'control-label'
    .controls
      = f.text_field :company, :class => 'text_field'
  .form-actions
    = f.submit 'All Set', :class => 'btn btn-primary'